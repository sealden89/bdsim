p1: placement, geometryFile="gdml:box1.gdml",
    	       x=0.3*m;

p2: placement, geometryFile="gdml:box2.gdml",
    	       x=-0.3*m;


d1: drift, l=1*m;
l1: line=(d1);
use, l1;

beam, particle="e-",
      energy=1.3*GeV;

! purposively control where the temporary directory for GDML
! preprocessing will be.
option, temporaryDirectory="./";